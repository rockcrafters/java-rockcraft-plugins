plugins {
    id('application')
    id('io.github.rockcrafters.rockcraft')
}

repositories {
    mavenLocal()
    mavenCentral()
}

dependencies {
    implementation platform('org.springframework.boot:spring-boot-dependencies:3.0.6')
    implementation 'org.springframework.ws:spring-ws-support:4.0.3'
    implementation 'org.eclipse.angus:jakarta.mail'
    implementation 'com.fasterxml.jackson.dataformat:jackson-dataformat-ion'
}

jar {
    manifest {
        attributes 'Main-Class': 'Test'
    }
}
